<% bkc = false %>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <% if bkc %>
        <img src="images/carousel/122.jpg" alt="BKC">
      <% else %>
        <img src="images/carousel/chania.jpg" alt="Moscow">
        <div class="carousel-caption">
          <h3>Chania</h3>
          <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
        </div>
      <% end %>
    </div>

    <div class="item">
      <% if bkc %>
        <img src="images/carousel/116.jpg" alt="BKC">
      <% else %>
        <img src="images/carousel/chania2.jpg" alt="Moscow">
        <div class="carousel-caption">
          <h3>Chania</h3>
          <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
        </div>
      <% end %>
    </div>

    <div class="item">
      <% if bkc %>
        <img src="images/carousel/69.jpg" alt="BKC">
      <% else %>
        <img src="images/carousel/flower.jpg" alt="Moscow">
        <div class="carousel-caption">
          <h3>Flowers</h3>
          <p>Beautiful flowers in Kolymbari, Crete.</p>
        </div>
      <% end %>
    </div>

    <div class="item">
      <% if bkc %>
        <img src="images/carousel/70.jpg" alt="BKC">
      <% else %>
        <img src="images/carousel/flower2.jpg" alt="Moscow">
        <div class="carousel-caption">
          <h3>Flowers</h3>
          <p>Beatiful flowers in Kolymbari, Crete.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only"><%= t :previous %></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only"><%= t :next %></span>
  </a>
</div>
